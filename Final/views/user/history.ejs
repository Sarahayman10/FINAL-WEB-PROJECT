<!DOCTYPE html>
<html lang="en">
  <%- include("../components/headTag.ejs") %>
  <head>
    <link rel="stylesheet" href="/css/history.css" />
  </head>

  <body>
    <%- include("./components/navbar.ejs") %>

    <div class="p-4">
      <% if (orders && orders.length > 0) { %>
      <div class="row clearfix">
        <% orders.forEach(order => { %>
        <div class="container">
          <article class="card">
            <header class="card-header">My Orders / Tracking</header>
            <div class="card-body">
              <h6>Order ID: <%=order._id%></h6>
              <article class="card">
                <div class="card-body row">
                  <div class="col">
                    <strong>Estimated Delivery time:</strong> <br />29 nov 2019
                  </div>
                  <div class="col">
                    <strong>Shipping BY:</strong> <br />
                    BLUEDART, | <i class="fa fa-phone"></i> +1598675986
                  </div>
                  <div class="col">
                    <strong>Status:</strong> <br />
                    <%=order.status%>
                  </div>
                  <div class="col">
                    <strong>Total Price #:</strong> <br />
                    <%=order.totalPrice%>
                  </div>
                </div>
              </article>
              <div class="track">
                <div class="step active">
                  <span class="icon"> <i class="fa fa-check"></i> </span>
                  <span class="text">Order confirmed</span>
                </div>
                <div class="step active">
                  <span class="icon"> <i class="fa fa-user"></i> </span>
                  <span class="text"> Picked by courier</span>
                </div>
                <div class="step">
                  <span class="icon"> <i class="fa fa-truck"></i> </span>
                  <span class="text"> On the way </span>
                </div>
                <div class="step">
                  <span class="icon"> <i class="fa fa-box"></i> </span>
                  <span class="text">Ready for pickup</span>
                </div>
              </div>
              <hr />
              <ul class="row">
                <% order.items.forEach(items => { %>

                <li class="col-md-4">
                  <figure class="itemside mb-3">
                    <div class="aside">
                      <img
                        src="<%=items.product.imageUrl%>"
                        class="img-sm border"
                      />
                    </div>
                    <figcaption class="info align-self-center">
                      <p class="title">
                        <%= items.product.name %> <br />
                        <small><em><%= items.product.category %></em></small>
                      </p>

                      <span class="text-muted"><%=items.quantity%> X <%=items.price%> EGP</span>
                    </figcaption>
                  </figure>
                </li>
                <% }); %>
              </ul>
            </div>
          </article>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <p>No orders Found</p>
      <% } %>
    </div>
  </body>
</html>
