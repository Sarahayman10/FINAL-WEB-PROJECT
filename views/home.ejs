        "tint": "CATEGORIES/Beauty/beauty.html",
        "croissant": "CATEGORIES/bakeries breadfast/Bakeries&pastries.html"
        
    };

    
    function searchProduct() {
        const input = document.querySelector(".search-input").value.toLowerCase().trim();
        
        
        if (productPages[input]) {
            
            window.location.href = productPages[input];
        } else {
            alert("Product not found. Please try another search.");
        }
    }

    
    document.querySelector(".search-btn").addEventListener("click", searchProduct);

    
    document.querySelector(".search-input").addEventListener("keypress", function(e) {
        if (e.key === "Enter") searchProduct();
    });
</script>

